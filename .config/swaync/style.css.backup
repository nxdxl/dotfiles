@import "../../.global-css/teatime-palatte.css";

@define-color background-color rgba(255, 255, 255, 0.85);

* {
    font-weight: 400;
	font-size: 1.2rem;
	color: @text;
}

.control-center .notification-row:focus,
.control-center .notification-row:hover {
    /* opacity: 1; */
    background: @base;
    border-radius: 15px;
}

.notification-row {
    outline: none;
    margin: 0px;
}

.notification {
	border-radius: 15px;
}

.notification-content{
    background: @base;
    /* padding: 5px 10px 5px 6px; */
	padding: 5px 10px;
    border-radius: 15px;
    border: 1px solid @accent1;
    margin: 0px;
}

.notification-default-action {
    margin: 0;
    padding: 0;
    border-radius: 15px;
}

.close-button {
    background: @accent2;
    color: @text;
    text-shadow: none;
    padding: 0;
    border-radius: 15px;
    margin-top: 10px;
    margin-right: 10px;
}

.close-button:hover {
    box-shadow: none;
    background: @red;
    transition: all .15s ease-in-out;
    border: none;
}


.notification-action {
    border: 1px solid @accent1;
    border-top: none;
    border-radius: 15px;
}


.notification-default-action:hover,
.notification-action:hover {
    color: @text;
    background: @base;
}

.notification-default-action {
    border-radius: 15px;
    margin: 5px;
}

.notification-default-action:not(:only-child) {
    border-bottom-left-radius: 15px;
    border-bottom-right-radius: 15px
}

.notification-action:first-child {
    border-bottom-left-radius: 15px;
    background: @base;
}

.notification-action:last-child {
    border-bottom-right-radius: 15px;
    background: @base;
}

.inline-reply {
    margin-top: 8px
}

.inline-reply-entry {
    background: @base;
    color: @text;
    caret-color: @text;
    border: 1px solid @accent1;
    border-radius: 15px
}

.inline-reply-button {
	font-size: 0.5rem;
    margin-left: 4px;
    background: @base;
    border: 1px solid @accent1;
    border-radius: 15px;
    color: @text;
}

.inline-reply-button:disabled {
    background: initial;
    color: @text;
    border: 1px solid transparent;
}

.inline-reply-button:hover {
    background: @base;
}

.body-image {
    margin-top: 6px;
    color: @text;
    border-radius: 15px;
}

.summary {
    font-size: 1rem;
    font-weight: 200;
    background: transparent;
    color: @text;
    text-shadow: none;
}

.time {
    font-size: 1rem;
    font-weight: 200;
    background: transparent;
    color: @text;
    text-shadow: none;
    margin-right: 18px;
}

.body {
    font-size: 1rem;
    font-weight: 200;
    background: transparent;
    color: @text;
    text-shadow: none;
}

.control-center {
    background: @background-color;
    border: 1px solid @accent1;
    border-radius: 15px;
}

.control-center-list {
    background: transparent;
}

.control-center-list-placeholder {
    opacity: 0.5;
}

.floating-notifications {
    background: transparent;
}

.blank-window {
    background: alpha(black, 0.1)
}

.widget-title {
    color: @text;
    background: @base;
    padding: 0px 0px 0px 15px;
    margin: 5px;
    font-size: 1rem;
    border-radius: 15px;
    border: 1px solid @accent1;
}

.widget-title>button {
    font-size: 1rem;
    color: @text;
    border-radius: 15px;
	background: @base;
	border: 1px solid @accent1;
}

.widget-title>button:hover {
    background: @crust;
    color: @text;
}

.widget-dnd {
    background: @base;
    padding: 5px 5px 5px 15px;
    /* padding: 3px 6px; */
    /* margin: 5px; */
    border-radius: 15px;
    border: 1px solid @accent1;
    font-size: 1rem;
    color: @text;
}

.widget-dnd>switch {
    border-radius: 15px;
    border: 1px solid @accent1;
    background: @red;
}

.widget-dnd>switch:checked {
    background: @green;
    border: 1px solid @accent1;
}

.widget-dnd>switch slider {
    background: @base;
    border-radius: 15px;
    border: 1px solid @accent1;
}

.widget-dnd>switch:checked slider {
    background: @base;
    border-radius: 15px;
    border: 1px solid @accent1;
}

.widget-mpris {
    color: @base;
    background: @base;
    /* padding: 3px 6px; */
    /* padding: 0px 15px 0px 15px; */
    margin: 5px;
    border-radius: 15px;
    border: 1px solid @accent1;
}

.widget-mpris > box > button {
	color: @base;
    border-radius: 15px;
    border: 1px solid @accent1;
}

.widget-mpris-player {
	color: @base;
    /* padding: 3px 6px; */
    /* padding: 0px 15px 0px 15px; */
    margin: 5px;
}

.widget-mpris-title {
	color: @base;
    font-weight: 200;
    font-size: 1rem
}

.widget-mpris-subtitle {
	color: @base;
    font-size: 1rem
}

.widget-label {
    margin: 5px;
}

.widget-label>label {
    font-size: 1rem;
    color: @text;
}

.widget-buttons-grid {
    font-size: large;
	color: @accent1;
    padding: 5px;
    margin: 5px;
    border-radius: 15px;
    background: @base;
    border: 1px solid @accent1;
}

.widget-buttons-grid>flowbox>flowboxchild>button {
    margin: 1px;
    background: @base;
    border-radius: 15px;
    color: @text;
    border: 1px solid @accent1;
}

.widget-buttons-grid>flowbox>flowboxchild>button:hover {
    background: @crust;
    color: @text;
    border: 1px solid @accent1;
}

.widget-menubar>box>.menu-button-bar>button {
    border: none;
    background: transparent
}

.topbar-buttons>button {
    border: none;
    background: transparent
}

.widget-volume {
    background: @base;
    padding: 5px;
	margin: 5px;
    /* margin: 10px 10px 5px 10px; */
    border-radius: 15px;
    border: 1px solid @accent1;
    font-size: x-large;
    color: @text;
}

.widget-volume>box>button {
    background: @accent1;
    border: none;
}

.per-app-volume {
    background-color: @noti-bg;
    padding: 4px 8px 8px;
    margin: 0 8px 8px;
    border-radius: 15px;
	color: @text-color
}

.widget-backlight {
    background: @noti-bg-alt;
    padding: 5px;
    margin: 10px 10px 5px 10px;
    border-radius: 15px;
    font-size: x-large;
    color: @text-color
}

.low {
  color: @text;
  background: @base;
  padding: 0px;
  border-radius: 15px;
}

.normal {
  color: @text;
  background: @base;
  padding: 0px;
  border-radius: 15px;
}

.critical {
  color: @text;
  background: @base;
  padding: 0px;
  border-radius: 15px;
}
